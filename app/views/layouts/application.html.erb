<!DOCTYPE html>
<html>
  <head>
    <title>PromoteMeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "sb-admin-2.min" %>
  </head>

  <body id="page-top">

  <% if signed_in? %>
    <div id="wrapper">
      <!-- Sidebar -->
      <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

        <!-- Sidebar - Brand -->
        <%= link_to root_path, class: "sidebar-brand d-flex align-items-center justify-content-center"  do %>
          <div class="sidebar-brand-text mx-3"> <%= image_tag("logoPromoteMe-white.svg", { size: "200x200", alt: "PromoteMe", class: "img-responsive"} ) %></div>
        <%end%>

        <!-- Divider -->
        <hr class="sidebar-divider my-0">

        <!-- Nav Item - Dashboard -->

        <!-- Divider -->
        <hr class="sidebar-divider">

        <div class="sidebar-heading text-gray-200">
          MÓDULOS EMPLEADOR
        </div>

        <li class="nav-item ml-2 text-gray-200 my-2">
          <%#= link_to categories_path, class: "nav-link"  do %>
          <i class="fas fa-address-book"></i>
          <span>Empleados</span>
          <%#end%>
        </li>

        <li class="nav-item ml-2 text-gray-200 my-2">
          <%#= link_to products_path, class: "nav-link"  do %>
          <i class="fas fa-address-book"></i>
          <span>Evaluaciones</span>
          <%#end%>
        </li>

        <li class="nav-item ml-2 text-gray-200 my-2">
          <%#= link_to clients_path, class: "nav-link"  do %>
          <i class="fas fa-address-book"></i>
          <span>Ascenso</span></a>
          <%#end%>
        </li>

        <li class="nav-item ml-2 text-gray-200 my-2">
          <%#= link_to suppliers_path, class: "nav-link"  do %>
          <i class="fas fa-address-book"></i>
          <span>Cargos críticos</span>
          <%#end%>
        </li>

        <li class="nav-item ml-2 text-gray-200 my-2">
          <i class="fas fa-address-book"></i>
          <span>Reportes</span>
        </li>


      </ul>
      <!-- End of Sidebar -->
  <% end %>

    <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">
        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

          <% if signed_in? == false %>
          <!-- Sidebar - Brand -->
          <%= link_to root_path, class: "sidebar-brand d-flex align-items-center justify-content-center"  do %>
            <div class="sidebar-brand-text mx-3"> <%= image_tag("logoPromoteMe.svg", { size: "200x200", alt: "PromoteMe", class: "img-responsive"} ) %></div>
          <%end%>
          <%end %>
          <!-- Sidebar Toggle (Topbar) -->
          <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
            <i class="fa fa-bars"></i>
          </button>

          <!-- Topbar Search -->
          <%= form_tag( '/search', options = { class: "d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" }) do %>
            <div class="input-group">
              <%= text_field_tag("termino", value = nil, options = { class: "form-control bg-light border-0 small", placeholder: "Search for..."}) %>
              <div class="input-group-append">
                <%= submit_tag(value = "Buscar", options = { class: "btn btn-primary" }) do %>
                  <i class="fas fa-search fa-sm"></i>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Topbar Navbar -->
          <ul class="navbar-nav ml-auto">

            <!-- Nav Item - Search Dropdown (Visible Only XS) -->
            <li class="nav-item dropdown no-arrow d-sm-none">
              <a class="nav-link dropdown-toggle" href="#" id="searchDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-search fa-fw"></i>
              </a>

              <!-- Dropdown - Messages -->
              <div class="dropdown-menu dropdown-menu-right p-3 shadow animated--grow-in" aria-labelledby="searchDropdown">
                <form class="form-inline mr-auto w-100 navbar-search">
                  <div class="input-group">
                    <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                      <button class="btn btn-primary" type="button">
                        <i class="fas fa-search fa-sm"></i>
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </li>

            <div class="topbar-divider d-none d-sm-block"></div>

            <div class="my-auto">
              <% if signed_in? %>
                <button class="btn btn-primary mx-2" type="button">
                <%= link_to "Salir", destroy_user_session_path, method: :delete, class: 'text-gray-100' %>
                </button>
              <% else %>
                <button class="btn btn-primary mx-2" type="button">
                  <%= link_to "Registrarse", new_user_registration_path , {:class => "text-gray-100"}%>
                </button>
                <button class="btn btn-primary " type="button">
                  <%= link_to "Ingresar", new_user_session_path, {:class => "text-gray-100"} %>
                </button>

              <% end %>
            </div>
            <!-- Nav Item - User Information -->


          </ul>

        </nav>
        <!-- End of Topbar -->
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <div class="container-fluid">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>
