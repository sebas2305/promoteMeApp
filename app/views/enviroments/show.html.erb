  <div class="card-body">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th scope="col" class="text-primary">ID</th>
        <th scope="col" class="text-primary">Nombre</th>
        <th scope="col" class="text-primary">Email</th>
        <th scope="col" class="text-primary">NPS</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <th ><%= @enviroment.user.id  %></th>
        <td><%= @enviroment.user.name %></td>
        <td><%= @enviroment.user.email %></td>
        <td><%= @enviroment.q1 %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>

